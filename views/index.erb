<h2>Products</h2>



<button><a href="/products/new">Add Product</a></button>
<hr>


<% @products.each do |product| %>
<p>Book ID: <%= product.id %></p>
<p>Book Name: <%= product.name %></p>
<p>ISBN: <%=product.isbn  %></p>
<p>Stock Level: <%= product.current_stock %></p>
<button><a href="products/<%= product.id %>">View Details</a></button>
<hr>
<% end %>
