<form class="" action="/products/" method="POST">

  <label for="name-field">Product Name</label>
  <input type="text" name="name" value="" id="name-field">

  <label for="description-field">Description:</label>
  <input type="text" name="description" value="" id="description-field">

  <label for="isbn-field">ISBN:</label>
  <input type="text" name="isbn" value="" id="isbn-field">

  <label for="date-published">Date Published:</label>
  <input type="text" name="date_published" value="" id="date-published">

  <label for="current-stock">Current Stock:</label>
  <input type="text" name="current_stock" value="" id="current-stock">

  <label for="minimum-stock">Minimum Stock Level</label>
  <input type="text" name="minimum_stock" value="" id="minimum-stock">

  <label for="trade=price">Trade Price:</label>
  <input type="text" name="trade_price" value="" id="">

  <label for="retail-price">Retail Price:</label>
  <input type="text" name="retail_price" value="" id="retail-price">

  <label for="publisher-id">Publisher:</label>
  <select class="" name="publisher_id" id="publisher-field">
  <% @publisher.each do |publisher| %>

  <option value="<%= publisher.id %>"><%= publisher.name %></option>
  <% end %>
  </select>

  <label for="author-id">Author:</label>
  <select class="" name="author_id" id="author-field">
  <% @author.each do |author| %>

  <option value="<%= author.id %>"><%= author.first_name %></option>
  <% end %>
  </select>

  <label for="genre-id">Genre:</label>
  <select class="" name="genre_id" id="genre-field">
  <% @genre.each do |genre| %>

  <option value="<%= genre.id %>"><%= genre.genre_type %></option>
  <% end %>
  </select>

  <input type="submit" name="" value="Save Product">


</form>
